@model IEnumerable<Domain.Entities.Car>

@{
    ViewBag.Title = "Admin: All Cars";
    Layout = "~/Views/_AdminLagout.cshtml";
}

<h2>All Cars</h2>
<form style="margin-bottom: 30px" asp-controller="Admin" asp-action="IndexCar" method="get">
    <div>
        Select the machine brand: <input type="text" name="SearchString">
        <input type="submit" value="Search" />
        <div style="float: right">@Html.ActionLink("Create New Car", "CreateCar")</div>
    </div>
</form>

<table class="Grid">
    <tr>
        <th>
            Make
        </th>
        <th>
            Model
        </th>
        <th>
            Year
        </th>
        <th>
            VIN
        </th>
        <th>Action</th>
    </tr>

    @foreach (var item in Model)
    {

        <tr>
            <td>
                @item.Make
            </td>
            <td>
                @item.Model
            </td>
            <td>
                @item.Year
            </td>
            <td>
                @item.Vin
            </td>
            <td>
                @using (Html.BeginForm("DeleteCar", "Admin", FormMethod.Post))
                {
                    @Html.Hidden("Id", item.Id)
                    <input type="submit" value="Delete"/>
                }
                @using (Html.BeginForm("EditCar", "Admin", FormMethod.Get))
                {
                    @Html.Hidden("Id", item.Id)
                    <input type="submit" value="Edit"/>

                }

            </td>
            
        </tr>
        
    }

</table>
